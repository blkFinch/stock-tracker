%table.table.table-striped
  %thead
    %tr
      %th{:scope => "col"} Symbol
      %th{:scope => "col"} Name
      %th{:scope => "col"} Current Price
      %th{:scope => "col"} Actions
  %tbody
    - @user_stocks.each do |stock|
      %tr
        %td= stock.ticker
        %td= stock.name
        %td= stock.last_price
        %td= link_to 'delete', user_stock_path(stock), method: :delete, class: 'badge badge-danger'

